{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2015",
    "module": "es2015",

    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "declaration": true,
    "declarationDir": "./types",

    "lib": [
       "dom",
       "es7"
    ],

   "types" : [
      ],

    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
